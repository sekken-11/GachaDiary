<div class="d-flex flex-column min-vh-100 bg-light">
<header class="sticky-top pb-3">
  <nav class="navbar navbar-dark bg-dark">
    <span class="navbar-brand mb-0 h1">タスク管理アプリ</span>
  </nav>
</header>
<% content_for(:title,"パスワードリセット")%>
<div class="container py-3">
    <div class="row">
        <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
          <div class="bg-white rounded shadow p-4">
            <h1 class="mt-3 mb-5">パスワード再設定</h1>
            <%= form_with model:@user,url:api_password_reset_path(@token),local: true do |f|%>
                <div class="form-group my-4">
                    <%=f.label :email, "メールアドレス" %>
                    <div class="text-success"><%=@user.email%></div>
                </div>

                <div class="form-group mb-4">
                    <%=f.label :password, "再設定するパスワード" %>
                    <%=f.password_field :password,class: "form-control"%>
                </div>

                <div class="form-group mb-4">
                    <%=f.label :password_confirmation, "再設定するパスワード（確認用）" %>
                    <%=f.password_field :password_confirmation,class: "form-control"%>
                </div>
                <div class="text-center">
                  <%=f.submit "更新",class:"btn btn-primary"%>
                </div>
            <%end%>
          </div>
        </div>
    </div>
</div>
<footer class="mt-auto text-center">
    <small>（仮）</small>
</footer>
</div>